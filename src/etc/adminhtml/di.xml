<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magewirephp\Magewire\ViewModel\Magewire">
        <plugin name="Magewirephp_MagewireBackend::replaceApplicationUrl"
                type="Magewirephp\MagewireBackend\Plugin\ReplaceApplicationUrlPlugin"/>
    </type>

    <type name="Magewirephp\Magewire\Model\Hydrator\FormKey">
        <plugin name="Magewirephp_MagewireBackend::disableFormKeyHydrator"
                type="Magewirephp\MagewireBackend\Plugin\DisableFormKeyHydratorPlugin"/>
    </type>

    <type name="Magewirephp\Magewire\Model\Hydrator\Security">
        <plugin name="Magewirephp_MagewireBackend::disableSecurityHydrator"
                type="Magewirephp\MagewireBackend\Plugin\DisableSecurityHydratorPlugin"/>
    </type>
</config>
